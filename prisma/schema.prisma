generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // Uses connection pooling
  url      = env("DATABASE_URL")
}

model GoodreadsBook {
  id         Int      @id @default(autoincrement())
  title      String?
  author     String?
  imageURL   String?
  externalId String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
