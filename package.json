		"svelte-preprocess": "^6.0.3",
		"tailwindcss": "^3.4.14",
		"tslib": "^2.8.0",
		"typescript": "^5.6.3",
		"vite": "^5.0.3",
		"vitest": "^2.1.3"
	},
	"type": "module",
	"dependencies": {
		"@prisma/client": "^5.22.0",
		"@vercel/analytics": "^1.3.1",
